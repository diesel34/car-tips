<h1>投稿フォーム</h1>
  
  <!--バリデーションのエラーメッセージ表示-->
  <% if @content_review.errors.any? %>
  <%= @content_review.errors.count %>件のエラーが発生しました
  <ul>
    <% @content_review.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>
  
  
  <!--新規投稿するフォーム-->
  <%= form_with model: @content_review do |f| %>
    <div class="form-group">
    <h4>タイトル</h4>
      <%= f.text_field :title %>
    </div>
    
    <div class="form-group">
      <h4>画像</h4>
      <%= f.file_field :image, accept: "image/*" %>
    </div>

    <div class="form-group">
    <h4>入手ルート</h4>
      <%= f.text_field :get_root %>
    </div>
    
    <div class="form-group">
    <h4>購入金額</h4>
      <%= f.text_field :price %>
    </div>
    
    <div class="form-group">
    <h4>説明文</h4>
      <%= f.text_area :explanation %>
    <div>

    <div class="row ml-1">
      <p>評価:</P>
        <div class="col-md-3 position-static">
          <div id="post_raty"></div>
        </div>
      <script>
        var elem = document.getElementById('post_raty');
        var opt = {  
        starOn: "<%= asset_path('star-on.png') %>",
        starOff: "<%= asset_path('star-off.png') %>",
        starHalf: "<%= asset_path('star-half.png') %>",
        };
        raty(elem,opt);
      </script>
    </div>

    <%= f.submit '投稿' %>
  <% end %>


