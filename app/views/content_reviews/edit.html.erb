<h1>編集画面</h1>

<%= form_with model: @content_review, url: edit_content_review_path(@content_review.id), method: :patch do |f| %>

  <!--投稿のデータの編集ページ-->
  <h4>タイトル</h4>
      <%= f.text_field :title %>
    <h4>画像</h4>
      <%= f.file_field :image, accept: "image/*" %>
    <h4>入手ルート</h4>
      <%= f.text_field :get_root %>
    <h4>購入金額</h4>
      <%= f.text_field :price %>
    <h4>説明文</h4>
      <%= f.text_area :explanation %>
  <%= f.submit '保存' %>
  
<% end %>