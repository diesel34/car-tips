<table class='table table-hover table-inverse'>
  <thead>
    <tr>
      <th></th>
      <th>タイトル</th>
      <th>コメント</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% content_reviews.each do |content_review| %>
      <tr>
        <td><%= link_to user_path(content_review.user) do %>
          <%= image_tag content_review.user.get_profile_image(100,100) %>
          <% end %>
        </td>
        <td><%= link_to content_review.title, content_review_path(content_review), class: "content_review_#{content_review.id}" %></td>
        <td><%= content_review.explanation %></td>
      </tr>
    <% end %>
  </tbody>
</table>